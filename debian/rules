#!/usr/bin/make -f
# You must remove unused comment lines for the released package.
export DH_VERBOSE = 1
export DEB_BUILD_MAINT_OPTIONS = hardening=+all
export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

export DEBIAN_PACKAGE=1

%:
	dh $@
override_dh_installsystemd:
	# Update the the dbus user to logname
	echo "DPKG_ROOT: ${DPKG_ROOT}"
	sed -i "/LOGNAME/,+1s/user=\".*\"/user=\"$(logname)\"/" "${DPKG_ROOT}/usr/share/dbus-1/system.d/com.yuezk.qt.GPService.conf"
	dh_installsystemd gpservice.service
